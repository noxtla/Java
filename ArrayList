package veryfree;

import java.awt.Color;
import java.util.Scanner;
import java.util.ArrayList;


public class VeryFree  {

    public static void main(String[] args) {
      
        ///Create an array list
        ArrayList<Empleado> ListaEmpleados = new ArrayList<Empleado>(); 
        
        ///Add some elements
        ///We can create the object "Empleado separate"
        ListaEmpleados.add(new Empleado("Ana", 54, 2500));
        
        
        ///Loop for print all elements
        for (Empleado e : ListaEmpleados) {
            System.out.println(e.dameEmpleados());
        }
        
    }
}

///Class empleado
class Empleado {
     public Empleado(String nombre, int edad, double salario) {
            this.nombre = nombre;
            this.edad = edad;
            this.salario = salario;
        }
     
     public String dameEmpleados(){
         
         return "El empleado se llama " + nombre + " Edad " + edad + " Salario " + salario;
     }
    
        private  String nombre;
        private  int edad;
        private  double salario;
}
